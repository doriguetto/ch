{
  "name": "@adobe/aem-boilerplate",
  "private": true,
  "version": "1.3.0",
  "description": "Starter project for Adobe Helix",
  "scripts": {
    "aem-up": "aem up",
    "lint:js": "eslint src/ --ext .json,.js,.mjs",
    "lint:css": "stylelint src/**/*.scss",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "build:json": "npm-run-all -p build:json:models build:json:definitions build:json:filters",
    "build:json:models": "merge-json-cli -i \"src/models/_component-models.json\" -o \"component-models.json\"",
    "build:json:definitions": "merge-json-cli -i \"src/models/_component-definition.json\" -o \"component-definition.json\"",
    "build:json:filters": "merge-json-cli -i \"src/models/_component-filters.json\" -o \"component-filters.json\"",
    "prepare": "husky",
    "start": "npm-run-all --parallel vite:watch:blocks vite:watch:styles aem-up",
    "vite": "vite",
    "vite:watch:blocks": "vite build -w --config vite.config.blocks.ts",
    "vite:watch:styles": "vite build -w --config vite.config.styles.ts",
    "vite:build:blocks": "vite build --config vite.config.blocks.ts",
    "vite:build:styles": "vite build --config vite.config.styles.ts",
    "vite:build:production": "BUILD_PRODUCTION=true npm-run-all --parallel vite:build:blocks vite:build:styles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/aem-boilerplate.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/adobe/aem-boilerplate/issues"
  },
  "homepage": "https://github.com/adobe/aem-boilerplate#readme",
  "devDependencies": {
    "@babel/eslint-parser": "7.28.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-xwalk": "github:adobe-rnd/eslint-plugin-xwalk#v0.1.3",
    "glob": "^11.0.3",
    "husky": "9.1.1",
    "merge-json-cli": "1.0.4",
    "npm-run-all": "^4.1.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sass-embedded": "^1.93.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "vite": "^7.1.7"
  }
}
